<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="@dimen/image_min"
        android:layout_height="@dimen/image_min"
        android:layout_marginStart="@dimen/image_margin"
        android:layout_marginTop="@dimen/image_margin"
        android:layout_marginEnd="@dimen/image_margin"
        android:layout_marginBottom="@dimen/image_margin"
        android:contentDescription="@string/event_desc" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/event_text_margin"
        android:layout_toEndOf="@id/event_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/event_title_size" />

    <TextView
        android:id="@+id/event_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:layout_toEndOf="@id/event_image"
        android:textColor="@android:color/secondary_text_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
