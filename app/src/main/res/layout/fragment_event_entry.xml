<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="@dimen/image_min"
        android:layout_height="@dimen/image_min"
        android:layout_margin="@dimen/image_margin" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/event_text_margin"
        android:layout_toEndOf="@id/event_image"
        android:text="Title"
        android:textSize="@dimen/event_title_size"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/event_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/event_image"
        android:layout_below="@id/event_title"
        android:text="08/07/1997 : 5:00pm"/>

    <TextView
        android:id="@+id/event_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:layout_marginLeft="@dimen/event_date_margin"
        android:layout_marginRight="@dimen/event_date_margin"
        android:layout_toEndOf="@id/event_start_date"
        android:text="-" />

    <TextView
        android:id="@+id/event_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:layout_toEndOf="@id/event_dash"
        android:text="08/07/1997 : 5:00pm" />

</RelativeLayout>
