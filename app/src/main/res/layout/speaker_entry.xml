<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/speaker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/event_date_margin"
        android:layout_marginTop="@dimen/event_title_size"
        android:text="@string/Speaker" />

    <TextView
        android:id="@+id/speaker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speaker_label"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/event_date_margin"
        android:layout_toStartOf="@id/speaker_image"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:id="@+id/speaker_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speaker_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/event_date_margin"
        android:layout_marginBottom="@dimen/event_date_margin"
        android:layout_toStartOf="@id/speaker_image"
        android:textColor="@android:color/secondary_text_light" />

    <ImageView
        android:id="@+id/speaker_image"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/image_margin"
        android:layout_marginTop="@dimen/image_margin"
        android:layout_marginEnd="@dimen/image_margin"
        android:layout_marginBottom="@dimen/image_margin"
        android:contentDescription="@string/image_desc" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

</RelativeLayout>